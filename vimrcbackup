" filetype plugin indent on " Enabling Pathogen plugin handler... Not needed
" for Plug plugin manager
syntax on " Turning Syntax on

" Current Plugins enabled
" 1. Nerdtree
" 2. Undotree
" 3. Vim-polyglot

call plug#begin('~/.vim/plugged')

Plug 'sheerun/vim-polyglot'
Plug 'scrooloose/nerdtree'
Plug 'mbbill/undotree'

call plug#end()

set encoding=UTF-8
set noerrorbells
set nu
set smartcase
set noswapfile
set autoread
set wildmenu
set backspace=indent,eol,start " Making sure backspace works
set noruler
set confirm
set shiftwidth=4
set autoindent
set smartindent
set number
set tabstop=4
set softtabstop=4
set expandtab
set hls is
set laststatus=2 " Setting the size for the command area, and airline status bar
set nowrap
set nobackup 
set nowritebackup
set autochdir " Sets the working directory to the file that is being edited

" Simple changes
let g:ctrlp_user_command = ['.git/', 'git --git-dir=%s/.git ls-files -oc --exclude-standard']
let mapleader = " "
let g:netrw_browse_split=2
let g:netrw_banner=0
let g:netrw_winsize = 25
let g:ctrlp_use_caching = 0

" Status Bar
set statusline=
set statusline+=%#DiffChange#
set statusline+=\ %M
set statusline+=\ %y
set statusline+=\ %r
set statusline+=\ %F
set statusline+=%= "Right side settings
set statusline+=%#DiffChange#
set statusline+=\ %c:%l/%L
set statusline+=\ %p%%
set statusline+=\ [%n]

" Extra mapping
map <C-n> :NERDTreeToggle<CR>
nnoremap <leader>h :wincmd h<CR>
nnoremap <leader>j :wincmd j<CR>
nnoremap <leader>k :wincmd k<CR>
nnoremap <leader>l :wincmd l<CR>
nnoremap <leader>u :UndotreeShow<CR>
nnoremap <leader>pv :wincmd v<bar> :Ex <bar> :vertical resize 30<CR>
nnoremap <silent> <leader>+ :vertical resize +5<CR>
nnoremap <silent> <leader>- :vertical resize -5<CR>
:map <C-0> :echo '~'<CR>
